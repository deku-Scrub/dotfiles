#" c": 
#" v": 
#" b":  :b#<CR>
#" n":  =
#" m":  `
#" ,":  '
#" .":  "
" /": "?"
#
#gt g~
#gi [I
" ku": upcase-word
" kd": downcase-word
"R": overwrite-mode
